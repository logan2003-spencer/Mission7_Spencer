@model Mission6.Models.Form

@{
}

@* The html aspect of the form *@

@* @Model Form *@
<div class="text-center">
    <h1>Add a Movie</h1>
    <br/>
    <form method="post">
        
        <input type="hidden" asp-for="MovieId"/>
        <br/>
        <input type="hidden" asp-for="MovieId"/>
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            @foreach (Categories c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br/>
        <label asp-for="Title">Title</label>
        <input asp-for="Title"/>
        <br/>
        <label asp-for="Year">Year</label>
        <input asp-for="Year"/>
        <br/>
        <label asp-for="Director">Director</label>
        <input asp-for="Director"/>
        <br/>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <br/>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br/>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo"/>
        <br/>
        <label asp-for="CopiedToPlex">Copied To Plex</label>
        <input asp-for="CopiedToPlex"/>
        <br/>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes"/>
        <br/>
        <br/>
        <button type="submit">Submit the Movie</button>
        
        <div asp-validation-summary="All"></div>
    </form>
</div>
